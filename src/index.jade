                        button.home__form__submit-button(data-target="form-2") continuar
                            i.fa.fa-long-arrow-right
                .home__form__col(data-content="form-2")
                    .home__form__container
                        .home__form__wrapper
                            label.home__form__label Título de tu Historia
                            input.home__form__input(type="text" id="titulo")
                        .home__form__wrapper
                            label.home__form__label tu historia
                            textarea.home__form__input.home__form__input--textarea(id="historia" placeholder="Escribe aquí tu historia")
