                            label.home__form__label ¿por qué es un desafío para ti?
                            input.home__form__input(type="text" id="desafio")
                        .home__form__wrapper
                            label.home__form__label ¿Por qué es tu sueño?
                            input.home__form__input(type="text" id="sueno")
                        button.home__form__submit-button(data-target="form-3") finalizar
                            i.fa.fa-long-arrow-right
                .home__form__col
            .home__form__dots
                ul
                    li
                        i.fa.fa-circle.-active(data-content="form-1")
                    li
                        i.fa.fa-circle(data-content="form-2")
                    li
